@{
    ViewData["Title"] = "Home Page";
}

<div>
    <div class="card radius-1 pt-0">
        <div class="card-header">
            <h5 class="card-title text-110 text-dark-tp2">
                @*@ViewBag.Message*@
                NOTICIAS
            </h5>
        </div><!-- /.card-header -->
    </div>
</div>
<div class="cards-container ">
    <div class="card  ">
        <div class="card-header p-0 pl-2 pt-1">
            <h5 class="card-title text-black-50">
                <i class="fa fa-filter mr-2px "></i>  Filtros de Búsqueda
            </h5>

        </div>
        <!-- /.card-header -->
        <div class="card-body p-1">
            <div class="p-2">
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="inputZip">Titulo</label>
                        <input type="text" class="form-control" id="txtTituloFiltrar" placeholder="Titulo Capacitación">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="form-field-mask-1">
                            Fecha Inicio
                        </label>
                        <div class="input-group">
                            <input type="date" class="form-control form-control" autocomplete="off" id="txtFechaInicioFiltrar" />
                        </div>
                    </div>
                    <div class="form-group col-md-2">
                        <label for="form-field-mask-1">
                            Fecha Fin
                        </label>
                        <div class="input-group">
                            <input type="date" class="form-control form-control" autocomplete="off" id="txtFechaFinFiltrar" />
                        </div>
                    </div>
                    <div class="form-group col-md-1">
                        <label>Buscar</label><br />
                        <button class="btn btn-success text-white" id="btnSearch"><i class="fas fa-search text-110 align-text-bottom mr-1"></i> Buscar</button>
                    </div>
                    <div class="form-group col-md-1">
                        <label for="">Acción</label><br />
                        <button class="btn btn-warning text-white" id="btnReset"><i class="fas fa-sync-alt text-110 align-text-bottom mr-1"></i> Limpiar</button>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
</div>

<link rel="stylesheet" type="text/css" href="./node_modules/bootstrap-table/dist/bootstrap-table.css">
<div>
    <div class="card radius-1 pt-2">
        <div class="card-header p-1  bgc-info">
            <h5 class="card-title text-white pl-2">
                <i class="fa fa-upload mr-2px "></i> Carga de Archivos
            </h5>
        </div><!-- /.card-header -->
        <div class="card-body p-1">
            <div class="p-2">
                <div class="form-row">
                    <div class="form-group col-sm-3" style="padding-left:1em">
                        <label>Fecha Archivo</label>
                        <input type="date" class="form-control form-control" autocomplete="off" id="txtFechaCapa" />
                        <label id="lblErrorcmbtxtFechaCapa" style="color: red; font-size: 12px !important; display: none"></label>
                    </div>
                    <div class="form-group col-sm-3">
                        <label>Titulo Noticia</label>
                        <input type="text" id="txtTitulo" class="form-control" />
                        <label id="lblErrortxtTitulo" style="color: red; font-size: 12px !important; display: none"></label>
                    </div>
                    <div class="form-group col-sm-3">
                        <label>Subir Archivo</label>
                        <input id="filesDocCapacitacion" name="filesDocCapacitacion" type="file" class="pr-2" size="3" />
                        <label id="lblErrorfilesDocCapacitacion" style="color: red; font-size: 12px !important; display: none"></label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="">
        <table class="table text-dark-m2 text-95" id="table">
        </table>
    </div><!-- /.card-body -->
</div>
<div class="modal" id="myModalLoading" tabindex="-1" role="dialog" style="display: block;" hidden>
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <div class=" d-flex flex-column justify-content-between align-items-center">
                    <p class="pt-2" style="color:darkblue">Por favor espere.....</p>
                    <div class="fas fa-spinner fa-spin text-purple-m1 fa-2x mb-3"></div>
                </div>
            </div>

        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.0/jquery-confirm.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.0/jquery-confirm.min.js"></script>
<script src="~/content/js/Notice.js"></script>
<script src="~/content/js/General.js"></script>
<link href="~/node_modules/toastr/toastr.min.css" rel="stylesheet" />
<script src="~/node_modules/toastr/toastr.min.js"></script>

